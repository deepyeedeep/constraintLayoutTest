<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_kakao"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_kakao"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintEnd_toStartOf="@id/edit_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_email"
        app:layout_constraintBottom_toBottomOf="@id/edit_pw"/>
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="@string/str_edit_email"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_weight="3.5"
        app:layout_constraintBottom_toTopOf="@id/edit_pw"
        app:layout_constraintStart_toEndOf="@id/image_kakao"
        app:layout_constraintEnd_toEndOf="@id/edit_pw"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:hint="@string/str_edit_pw"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_weight="3.5"
        app:layout_constraintStart_toEndOf="@id/image_kakao"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/butt_login"/>

    <Button
        android:id="@+id/butt_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/str_butt_login"
        android:textColor="@color/warm_white"
        android:background="@color/light_black"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintStart_toEndOf="@id/edit_pw"
        app:layout_constraintTop_toTopOf="@id/edit_email"
        app:layout_constraintBottom_toBottomOf="@id/edit_pw"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/butt_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_butt_reg"
        android:textColor="@color/warm_white"
        android:background="@color/light_black"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        app:layout_constraintStart_toStartOf="@id/edit_pw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />
    <Button
        android:id="@+id/butt_forgot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_butt_forgot"
        android:textColor="@color/warm_white"
        android:background="@color/light_black"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        app:layout_constraintEnd_toEndOf="@id/edit_pw"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

</androidx.constraintlayout.widget.ConstraintLayout>